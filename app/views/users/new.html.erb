<%= form_for :user, url: users_path do |f| %>

 	<ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  	</ul>

	<%= f.label :firstname %>
	<%= f.text_field :firstname %><br />

	<%= f.label :lastname %>
	<%= f.text_field :lastname %><br />

	<%= f.label :email %>
	<%= f.text_field :email %><br /><br />

	<%= f.label :country %>
	<%= f.text_field :country %><br />

	<%= f.label :city %>
	<%= f.text_field :city %><br />

	<%= f.label :street %>
	<%= f.text_field :street %><br />

	<%= f.label :house %>
	<%= f.text_field :house %><br /><br />


	<%= f.label :password %>
	<%= f.password_field :password %><br />
	
	Confirm password:
	<%= f.password_field :password_confirmation %><br />

	<%= f.submit "Save" %>


	

<% end %>